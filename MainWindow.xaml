<Window x:Class="MoxaConfigApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Moxa Configuration Tool"
        Height="520"
        Width="880"
        WindowStartupLocation="CenterScreen"
        Background="#f7f8fb">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="14"
                Margin="0,0,0,10"
                CornerRadius="8"
                Background="White"
                BorderBrush="#dcdcdc"
                BorderThickness="1">
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Configurazione Moxa" FontSize="18" FontWeight="SemiBold" Foreground="#2b3a67" />
                    <TextBlock Text="  Â·  " FontSize="18" Foreground="#9aa3b8" />
                    <TextBlock Text="IP default: 192.168.127.254" FontSize="14" Foreground="#4c5d7a" />
                </StackPanel>

                <Label Grid.Row="1" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center">Montante:</Label>
                <TextBox x:Name="txtMontante"
                         Grid.Row="1"
                         Grid.Column="1"
                         Margin="0,0,0,10"
                         Height="28"
                         Width="320"
                         VerticalContentAlignment="Center"
                         ToolTip="Nome/ID del montante" />

                <Label Grid.Row="2" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center">Nuovo IP di management:</Label>
                <TextBox x:Name="txtIPAddress"
                         Grid.Row="2"
                         Grid.Column="1"
                         Margin="0,0,0,10"
                         Height="28"
                         Width="320"
                         VerticalContentAlignment="Center"
                         ToolTip="Nuovo IP da assegnare allo switch" />

                <Label Grid.Row="3" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center">SSH Host (IP attuale):</Label>
                <TextBox x:Name="txtSSHHost"
                         Grid.Row="3"
                         Grid.Column="1"
                         Margin="0,0,0,10"
                         Height="28"
                         Width="320"
                         VerticalContentAlignment="Center"
                         ToolTip="IP attuale per la connessione SSH" />

                <Label Grid.Row="4" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center">Interfaccia rete:</Label>
                <ComboBox x:Name="cmbInterfaces"
                          Grid.Row="4"
                          Grid.Column="1"
                          Margin="0,0,0,10"
                          Height="28"
                          Width="320"
                          VerticalContentAlignment="Center"
                          DisplayMemberPath="Display"
                          ToolTip="Seleziona la scheda su cui aggiungere l'IP locale" />

                <Button x:Name="btnConfigure"
                        Grid.Row="5"
                        Grid.Column="1"
                        Width="220"
                        Height="34"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        Background="#2b5bea"
                        Foreground="White"
                        BorderBrush="#2b5bea"
                        BorderThickness="1"
                        FontWeight="SemiBold"
                        Content="Avvia configurazione"
                        Click="btnConfigure_Click" />
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Padding="12"
                Background="#eef1f7"
                BorderBrush="#dcdcdc"
                BorderThickness="1"
                CornerRadius="8">
            <TextBlock Text="Log operazioni"
                       FontWeight="SemiBold"
                       Foreground="#2b3a67"
                       Margin="0,0,0,6" />
        </Border>

        <TextBox x:Name="txtLog"
                 Grid.Row="2"
                 Margin="0,10,0,0"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 FontSize="12" />
    </Grid>
</Window>
